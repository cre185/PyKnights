{
  "name": "pyknights",
  "displayName": "PyKnights",
  "description": "Code highlight and auto completion for python",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyknights.helloWorld",
        "title": "Hello World"
      }
    ],
    "colors": [
      {
        "id": "pyknights.color1",
        "description": "The color used for the status bar background.",
        "defaults": {
          "dark": "#00FF00",
          "light": "#00FF00",
          "highContrast": "#00FF00"
        }
      }
    ],
    "grammars": [
      {
        "language": "python",
        "scopeName": "source.pyknightsPython",
        "path": "./syntaxes/pyknightsPython.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "PyKnights",
        "uiTheme": "vs-dark",
        "path": "./themes/pyknightsTheme.json"
      }
    ],
    "semanticTokenScopes": {
      "python": {
        "variable": ["variable"],
        "function": ["function"],
        "package": ["namespace"],
        "reserved": ["keyword"],
        "constant": ["constant"],
        "operator": ["operator"],
        "separator": ["punctuation"],
        "string": ["string"],
        "space": ["whitespace"],
        "comment": ["comment"],
        "error": ["invalid"],
        "assigner": ["operator"]
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "yeoman-generator": "^7.1.1"
  }
}
